FROM php:8.4-fpm

# Argumentos para UID/GID do usuário local (evita problemas de permissão)
ARG UID=1000
ARG GID=1000

# Instalar dependências do sistema
RUN apt-get update && apt-get install -y \
    libpng-dev \
    libonig-dev \
    libxml2-dev \
    libzip-dev \
    redis \
    zip \
    vim \
    unzip \
    curl \
    git \
    && docker-php-ext-install pdo_mysql mbstring exif pcntl bcmath gd zip \
    && pecl install redis \
    && docker-php-ext-enable redis \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Instalar Xdebug para debugging
RUN pecl install xdebug && docker-php-ext-enable xdebug

# Instalar Composer
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# Criar usuário com mesmo UID/GID do host
RUN groupmod -g ${GID} www-data && usermod -u ${UID} -g ${GID} www-data

WORKDIR /var/www

# Copiar configuração PHP para desenvolvimento
COPY docker/php/php.dev.ini /usr/local/etc/php/conf.d/custom.ini

# Permissões
RUN chown -R www-data:www-data /var/www

USER www-data

EXPOSE 9000

CMD ["php-fpm"]